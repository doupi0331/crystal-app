<%= form_for(@trade, :html => {class: "form-horizontal", role: "form"}, :url => {:action => "create", :id => @member} ) do |f| %>

<!-- trade -->
<div class="form-group">
	<div class="col-sm-2 control-label">
		<%= f.label :trade_date %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :trade_date, value: Date.today, class: "form-control",:readonly => true %>
	</div>
</div>
<div id="hidden data">
	<%= f.hidden_field :member_id, { :value => @member.id }%>
	<%= f.hidden_field :creator, { :value => current_user.email }%>
	<%= f.hidden_field :trade_type, { :value => "O" }%>
	<%= f.hidden_field :trade_name, { :value => "消費" }%>
</div>
<!-- end trade -->

<!-- trade products -->
<div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= label_tag t('.product-type', default: 'Product type') %>
		</div>
		<div class="col-sm-10">
			<%= select_tag :product_type, options_from_collection_for_select(ProdType.order_by(:name => 'desc'), :id, :name),
			prompt: t('.please-select-type', default: 'Please select'),
			class: "form-control" %>
		</div>
	</div>
	<div class="form-group" id="product_input">
		<div class="col-sm-2 control-label">
			<%= label_tag t('.product-id', default: 'Product') %>
		</div>
		<div class="col-sm-10">
			<%= select_tag :product_id, option_groups_from_collection_for_select(ProdType.order_by(:name => 'desc'), :products, :name, :id, :name),
			prompt: t('.please-select-product', default: 'Please select'),
			class: "form-control"%>

			<p id="message" class="control-label-left">
				<%= t('.cant-found', default: 'Cant found')%>
			</p>
		</div>
	</div>
	<div class="form-group" id="price_input">
		<div class="col-sm-2 control-label">
			<%= f.label :current_price %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :current_price, class: "form-control",:readonly => true %>
			<%= f.hidden_field :product, { :value => current_user.email }%>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :amount %>
		</div>
		<div class="col-sm-10">
			<%= f.number_field :amount, value: 1, min: 1, class: "form-control", placeholder: t('.enter_the_product_amount', default: "Enter the product amount") %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit t('.add', default: 'Add a new trade'), class: 'btn btn-primary btn-block', id: 'trade_submit' %>
		</div>
	</div>
</div>
<!-- trade products -->

<% end %>