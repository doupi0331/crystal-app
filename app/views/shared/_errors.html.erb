<% if obj.errors.any? %>
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h2 class="panel-title">
						<%= "有 #{obj.errors.count} 個錯誤導致無法儲存" %>
					</h2>
					<div class="panel-body">
						<ul>
							<% obj.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>